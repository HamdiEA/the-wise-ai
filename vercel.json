{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "functions": {
        "api/**/*.js": {
            "maxDuration": 10
        }
    },
    "routes": [{
            "src": "/api/auth/token",
            "dest": "/api/auth/token"
        },
        {
            "src": "/api/auth/verify",
            "dest": "/api/auth/verify"
        },
        {
            "src": "/api/menu-assistant",
            "dest": "/api/menu-assistant"
        },
        {
            "src": "/(.*\\..*)",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}