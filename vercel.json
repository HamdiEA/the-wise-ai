{
    "version": 2,
    "functions": {
        "api/**/*.js": {
            "maxDuration": 10
        }
    },
    "routes": [{
            "src": "/api/auth/token",
            "dest": "/api/auth/token.js"
        },
        {
            "src": "/api/auth/verify",
            "dest": "/api/auth/verify.js"
        },
        {
            "src": "/api/menu-assistant",
            "dest": "/api/menu-assistant.js"
        },
        {
            "src": "/api/.*",
            "dest": "/api"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}